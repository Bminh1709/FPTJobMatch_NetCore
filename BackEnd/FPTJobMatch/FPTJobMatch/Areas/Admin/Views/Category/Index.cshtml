    <!-- Confirm Form -->
    <div id="acceptForm" class="hidden absolute top-0 bottom-0 left-0 right-0 bg-black bg-opacity-50 z-10">
        <div class="bg-white mx-auto w-1/4 h-fit rounded-lg mt-28">
            <div class="flex gap-4 items-center px-5 py-3">
                <input hidden type="text" value="1">
                <p class="text-MyBlue text-lg font-semibold">Confirm Accept</p>
            </div>
            <div class="w-full h-0.5 bg-MyVeryPaleGrey"></div>
            <div class="px-5 py-3">
                <p class="">Are you sure you would like to delete this profile from the database? This action cannot be undone.</p>
                <div class="flex gap-2 justify-end mt-6">
                    <button id="cancel_acceptForm" class=" rounded-lg border border-MyBlue bg-MyPaleBlue py-2 px-5">Cancel</button>
                    <button class="border border-MyBlue bg-MyBlue text-white rounded-lg hover:bg-MyPaleBlue hover:text-MyBlue py-2 px-5">Accept</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Form -->
    <div id="deletionForm" class="hidden absolute top-0 bottom-0 left-0 right-0 bg-black bg-opacity-50 z-10">
        <div class="bg-white mx-auto w-1/4 h-fit rounded-lg mt-28">
            <div class="flex gap-4 items-center px-5 py-3">
                <input hidden type="text" value="1">
                <p class="text-MyOrange text-lg font-semibold">Confirm Deletion</p>
            </div>
            <div class="w-full h-0.5 bg-MyVeryPaleGrey"></div>
            <div class="px-5 py-3">
                <p class="">Are you sure you would like to delete this profile from the database? This action cannot be undone.</p>
                <div class="flex gap-2 justify-end mt-6">
                    <button id="cancel_deletionForm" class=" rounded-lg border border-MyOrange bg-MyPaleOrange py-2 px-5">Cancel</button>
                    <button class="btn py-2 px-5">Accept</button>
                </div>
            </div>
        </div>
    </div>
</div>

